---
const { title, published, updated, summary } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="min-h-screen p-4 md:p-8">
  <div class="max-w-6xl mx-auto bg-white shadow-lg border-2 border-gray-800">
    <!-- ヘッダー部分 -->
    <div class="border-b-2 border-gray-800 p-6 bg-gray-100">
      <h1 class="text-3xl font-bold mb-2">{title}</h1>
      <div class="flex gap-4 text-sm text-gray-600">
        <span>初回投稿: {published}</span>
        {updated && <span>更新日: {updated}</span>}
      </div>
    </div>

    <!-- メインコンテンツ（コーネル式レイアウト） -->
    <div class="flex flex-col md:flex-row min-h-[500px]">
      <!-- 左カラム: キュー -->
      <div class="w-full md:w-1/4 border-b-2 md:border-b-0 md:border-r-2 border-gray-800 p-6 bg-amber-50">
        <h2 class="text-lg font-bold mb-4 text-gray-700">キーワード</h2>
        <div class="space-y-2 text-sm text-gray-600">
          <p class="italic">※ 記事から自動抽出されたキーワードやメモをここに配置できます</p>
        </div>
      </div>

      <!-- 右カラム: ノート（スクロール可能） -->
      <div class="w-full md:w-3/4 p-6 overflow-y-auto max-h-[600px]">
        <div class="prose prose-sm max-w-none">
          <slot />
        </div>
      </div>
    </div>

    <!-- サマリー部分（3行固定） -->
    <div class="border-t-2 border-gray-800 p-6 bg-blue-50">
      <h2 class="text-lg font-bold mb-2 text-gray-700">サマリー</h2>
      <p class="text-sm text-gray-700 line-clamp-3">{summary}</p>
    </div>
  </div>

  <div class="max-w-6xl mx-auto mt-4">
    <a href="/" class="text-blue-600 hover:underline">← 目次に戻る</a>
  </div>
</body>
</html>
